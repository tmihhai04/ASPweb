﻿
@{
    ViewData["Title"] = "DangKy";
}
@model TaiKhoanViewModel

<div class="container">
    <h1>
        Đăng ký
    </h1>
    <form method="post">
        <label asp-for="Username">Username:</label>
        <input asp-for="Username" type="text" class="form-control" />

        <label asp-for="Password">Password:</label>
        <input asp-for="Password" type="password" class="form-control" />

        <label asp-for="Name">Name:</label>
        <input asp-for="Name" type="text" class="form-control" />

        <label asp-for="Age">Age:</label>
        <input asp-for="Age" type="number" class="form-control" />

        <button type="submit" class="btn btn-primary">Đăng ký</button>
    </form>

    <hr />
    @if (Model != null && Model.Password != null && Model.Password.Length > 0)
    {
        <h3>Thông tin đã nhập: </h3>
        <p>Username: @Model.Username</p>
        <p>Password: @Model.Password</p>
        <p>Name: @Model.Name</p>
        <p>Age: @Model.Age</p>
    }

</div>