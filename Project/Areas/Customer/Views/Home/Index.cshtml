@model IEnumerable<SanPham>
<div class="row">
    @foreach (var item in @Model)
    {
        <div class="col-3 p-3">
            <div class="card h-100 d-flex flex-column" style="width: 18rem; min-height: 500px;">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column" style="flex-grow: 1;">
                    <h4 class="card-title text-danger">@item.price.ToString("N0") VND</h4>
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <div class="row">
                        <div class="col-6">
                            <a href="#" class="btn btn-primary">Thêm vào</a>
                        </div>
                        <div class="col-6">
                            <a href="#" class="btn btn-danger">Mua hàng</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>